{
  "manifest_version": 3,
  "name": "Eurozon Deal Finder",
  "version": "1.0",
  "description": "Compare les prix d’un produit Amazon sur plusieurs pays européens.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "permissions": ["tabs", "activeTab", "scripting"],
  "host_permissions": [
  "https://www.amazon.fr/*",
  "https://www.amazon.de/*",
  "https://www.amazon.it/*",
  "https://www.amazon.es/*",
  "https://www.amazon.com.be/*"]
}
